//- doctype html

mixin header
  header.header
    .container
      .header__grid
        .header__grid-item
          a.header__logo.u-display-flex(href='#')
            +logo-svg

        .header__grid-item.u-display-none-m
          |nav
        .header__grid-item.u-display-none-m
          |about
        .header__grid-item.u-display-none-m
          |socials
        .header__grid-item.u-display-none-m
          |email

        .header__grid-item.u-display-none-m
          |button

        .header__grid-item
          a.u-display-flex(href=`mailto:${data.email}`)
            +email-button-svg
        .header__grid-item
          .u-display-flex
            +menu-button-svg(data-menu-button='open')
